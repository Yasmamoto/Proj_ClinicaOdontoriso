@page "/procedimento/{Id:int}/editar"
@rendermode InteractiveServer

@using ProjClinicaOdontoriso.Models;
@inject ProcedimentoDAO procedimentoDAO;
@inject NavigationManager Navigation;

<PageTitle>Procedimento</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização Procedimento - @procedimento.Nome</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}

<EditForm Model="procedimento" OnSubmit="Salvar">
    <div class="mb-4">
        <label for="nome" class="block text-sm font-medium text-gray-700">Nome</label>
        <input @bind-value="procedimento.Nome" type="text" id="nome"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="tempo" class="block text-sm font-medium text-gray-700">Tempo</label>
        <input @bind-value="procedimento.Tempo" type="text" id="Tempo"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="valor" class="block text-sm font-medium text-gray-700">Valor</label>
        <input @bind-value="procedimento.Valor" type="text" id="valor"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>

    <div class="mb-4">
        <label for="descricao" class="block text-sm font-medium text-gray-700">Descrição</label>
        <textarea id="descricao"
                  class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">@procedimento.Descricao</textarea>
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Procedimento procedimento { get; set; } = new();

    protected override void OnInitialized()
    {
        var _procedimento = procedimentoDAO.BuscarPorId(Id);

        if (_procedimento != null)
        {
            procedimento = _procedimento;
        }
        else
        {
            erro = "Procedimento não encontrado.";
        }
    }

    private void Salvar()
    {
        try
        {
            procedimentoDAO.Atualizar(procedimento);

            Navigation.NavigateTo("/Gerenciar Procedimento");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao salvar o procedimento: {ex.Message}";
        }

    }
}
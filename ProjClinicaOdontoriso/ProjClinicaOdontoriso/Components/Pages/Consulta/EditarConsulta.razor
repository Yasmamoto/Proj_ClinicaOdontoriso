@page "/consulta/{Id:int}/editar"
@rendermode InteractiveServer

@using ProjClinicaOdontoriso.Models;
@inject ConsultaDAO consultaDAO;
@inject NavigationManager Navigation;

<PageTitle>Consulta</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização Consulta - @consulta.Data</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}

<EditForm Model="consulta" OnSubmit="Salvar">
    <div class="mb-4">
        <label for="horario" class="block text-sm font-medium text-gray-700">Horario</label>
        <input @bind-value="consulta.Horario" type="text" id="horario"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <div class="mb-4">
        <label for="data" class="block text-sm font-medium text-gray-700">Data</label>
        <input @bind-value="consulta.Data" type="text" id="data"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Consulta consulta { get; set; } = new();

    protected override void OnInitialized()
    {
        var _consulta = consultaDAO.BuscarPorId(Id);

        if (_consulta != null)
        {
            consulta = _consulta;
        }
        else
        {
            erro = "Consulta não encontrada.";
        }
    }

    private void Salvar()
    {
        try
        {
            consultaDAO.Atualizar(consulta);

            Navigation.NavigateTo("/Gerenciar Consulta");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao salvar a consulta: {ex.Message}";
        }

    }
}
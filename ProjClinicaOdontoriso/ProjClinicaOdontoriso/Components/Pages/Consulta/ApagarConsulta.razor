@page "/consulta/{Id:int}/excluir"
@rendermode InteractiveServer

@using ProjClinicaOdontoriso.Models;
@inject ConsultaDAO consultaDAO;
@inject NavigationManager Navigation;

<PageTitle>Consulta</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão de Consulta</h1>

@if (erro != string.Empty)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Erro!</strong>
        <span class="block sm:inline">@erro</span>
    </div>
}


<EditForm Model="consulta" OnSubmit="Excluir">
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Atenção!</strong>
        <span class="block sm:inline">Esta ação não pode ser desfeita.</span>


        <p class="text-lg">Tem certeza que deseja excluir a consulta <strong>@consulta.Data</strong>?</p>
    </div>


    <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded mt-2">Excluir</button>
    <a href="/Gerenciar Consulta" class="bg-gray-500 text-white px-4 py-2 rounded mt-2">Cancelar</a>

</EditForm>

@code {

    private string erro = string.Empty;

    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private Consulta consulta { get; set; } = new();

    protected override void OnInitialized()
    {
        var _consulta = consultaDAO.BuscarPorId(Id);

        if (_consulta != null)
        {
            consulta = _consulta;
        }
        else
        {
            erro = "Consulta não encontrada.";
        }
    }

    private void Excluir()
    {
        try
        {
            consultaDAO.Excluir(consulta.Id);

            Navigation.NavigateTo("/Gerenciar Consulta");
        }
        catch (Exception ex)
        {
            erro = $"Erro ao excluir a consulta: {ex.Message}";
        }

    }
}
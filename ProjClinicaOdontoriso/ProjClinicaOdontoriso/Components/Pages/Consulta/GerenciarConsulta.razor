@page "/Gerenciar Consulta"
@rendermode InteractiveServer

@using ProjClinicaOdontoriso.Models;
@inject ConsultaDAO consultaDAO
@inject NavigationManager Navigation;


<PageTitle>Consultas</PageTitle>

<link rel="stylesheet" href="/Css/styleConsulta/StyleListarConsulta.css">

<h1>Consultas</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Horário</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>

    <tbody>
        @{
            int contador = 1;
            @foreach (var consulta in listaConsultas)
            {
                <tr>
                    <td>@contador</td>
                    <td>@consulta.Horario.ToString(@"hh\:mm")</td>
                    <td>@consulta.Data.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a href="/consulta/@consulta.Id/editar" class="btn btn-sm btn-primary mr-2">
                            <i class="fas fa-edit"></i> Atualizar
                        </a>
                        <a href="/consulta/@consulta.Id/excluir" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash"></i> Excluir
                        </a>
                    </td>
                </tr>

                contador++;
            }
        }
    </tbody>
</table>

<div class="botoes-inferiores">
    <button type="button" class="botao-adicionar" @onclick="@(() => Navigation.NavigateTo("/consulta/nova"))">Nova Consulta</button>
</div>

@code {
    private List<Consulta> listaConsultas = new();

    protected override void OnInitialized()
    {
        CarregarConsultas();
    }

    private void CarregarConsultas()
    {
        listaConsultas = consultaDAO.ListarTodos();
    }
}
